{% extends 'base.html.twig' %}

{% block title %}Modification Profil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Profil</h1>
        {{ form_start(profil) }}
         <div class="mb-4">{{ form_row(profil.pseudo) }}</div>
         <div class="mb-4">{{ form_row(profil.plainPassword) }}</div>
         <div class="mb-4">{{ form_row(profil.avatar) }}</div>
         <div class="mb-4">{{ form_row(profil.coordonnees.nom) }}</div>
         <div class="mb-4">{{ form_row(profil.coordonnees.prenom) }}</div>
         <div class="mb-4">{{ form_row(profil.coordonnees.tel) }}</div>
         <div class="mb-4">{{ form_row(profil.coordonnees.mail) }}</div>
         <div class="mb-4">{{ form_row(profil.coordonnees.address.no) }}</div>
         <div class="mb-4">{{ form_row(profil.coordonnees.address.rue) }}</div>
         <div class="mb-4">{{ form_row(profil.coordonnees.address.villes) }}</div>

        <button type="submit" class="btn btn-warning">Modifier</button>
        {{ form_end(profil) }}
</div>
{% endblock %}
