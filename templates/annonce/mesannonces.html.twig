{% block title %}Annonces{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Mes annonces</h1>
    <table>
    {% for annonce in annonces %}
    <tr><td>{{ annonce.titre }}</td></tr>
    <tr><td>{{ annonce.description }}</td></tr>
    <tr><td>{{ annonce.date|date }}</td></tr>
    <tr><td>{{ annonce.prix }}</td></tr>
    <tr><td>{{ annonce.image }}</td></tr>
    <tr><td>{{ annonce.statut }}</td></tr>
    <tr><td><a href='/mesannonces/{{annonce.id}}/delete' onclick="return confirm('Are you sure you want to delete this item?');">Supprimer</a> <a href='/mesannonces/{{annonce.id}}/edit'>Edit</a></td></tr>
    </tr>
    {% endfor %}
    </table>

</div>
{% endblock %}